{
  "$jason": {
    "head": {
      "title": "Native",
      "actions": {
        "$load": {
          "type": "$render"
        },
        "navigate": {
          "type": "$default"
        }
      },
      "templates": {
        "body": {
          "header": {
            "style": {
              "background": "#FF9800",
              "color": "#212121"
            },
            "title":
            {
              "type": "image",
              "style": {
                "align": "left",
                "left": "20",
                "width": "125",
                "height": "50"
              },
              "url": "https://DinaDurykina.github.io/app4webline.png"
            },
            "menu":
                  {
                  "text": "Native Wrap",
                      "style": {
                      "color": "#424242",
                        "font": "Roboto",
                       "size": "16"
                       },

              "action": {
                "type": "$util.toast",
                "options": {
                  "text": "Что бы выбрать другой шаблон, нажмите меню справа"
                }
              }
            }
          },
          "background": {
            "type": "html",
            "url": "http://www.brazuka.ru/",
            "action": {
              "trigger": "navigate"
            }
          },
          "footer": {
            "tabs": {
              "style": {
                "background": "#FF9800",
                "color": "#212121"
              },
              "items": [
                {
                  "image": "https://DinaDurykina.github.io/icons8-camera-24.png"
                },
                {
                  "image": "https://DinaDurykina.github.io/icons8-cut-paper-24.png",
                  "actions": {
                    "$foreground": {
                      "type": "$reload"
                    },
                    "$pull": {
                      "type": "$snapshot",
                      "success": {
                        "type": "$util.share",
                        "options": {
                          "items": [
                            {
                              "type": "image",
                              "data": "{{$jason.data}}"
                            }
                          ]
                        }
                      }
                    }
                  }
                },
                {
                  "image": "https://DinaDurykina.github.io/icons8-microphone-24.png"
                }
              ]
            }
          }
        }
      }
    }
  }
}



